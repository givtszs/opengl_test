<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeader0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Click to draw"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnDrawTriangle"
        app:layout_constraintEnd_toEndOf="@id/btnDrawTriangle"
        app:layout_constraintStart_toStartOf="@id/btnDrawTriangle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDrawTriangle"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Triangle"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="or"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnDrawSquare"
        app:layout_constraintEnd_toEndOf="@id/btnDrawTriangle"
        app:layout_constraintStart_toStartOf="@id/btnDrawTriangle"
        app:layout_constraintTop_toBottomOf="@id/btnDrawTriangle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDrawSquare"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:insetBottom="0dp"
        android:text="Square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader1" />

    <TextView
        android:id="@+id/tvHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="or"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnDrawCube"
        app:layout_constraintEnd_toEndOf="@id/btnDrawTriangle"
        app:layout_constraintStart_toStartOf="@id/btnDrawTriangle"
        app:layout_constraintTop_toBottomOf="@id/btnDrawSquare" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDrawCube"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:insetTop="0dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:insetBottom="0dp"
        android:text="Cube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader2" />


</androidx.constraintlayout.widget.ConstraintLayout>